<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/feedback_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_45dp"
        android:background="@color/layout_title_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/feedback_layout_back"
            android:layout_width="@dimen/margin_size_100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10dp"
                android:src="@drawable/back_img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/feedbacks_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_size_40dp"
            android:layout_marginRight="@dimen/margin_size_40dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/feekback_activity_phone_edi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10dp"
        android:background="@drawable/edittext_corner_white_bg"
        android:hint="请输入你的联系方式"
        android:inputType="phone"
        android:padding="@dimen/margin_size_10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/font_size_12sp" />

    <EditText
        android:id="@+id/feekback_activity_content_edi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_100dp"
        android:layout_marginLeft="@dimen/margin_size_10dp"
        android:layout_marginRight="@dimen/margin_size_10dp"
        android:background="@drawable/edittext_corner_white_bg"
        android:gravity="top"
        android:hint="请描述下你的建议或意见"
        android:inputType="textMultiLine"
        android:padding="@dimen/margin_size_10dp"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/font_size_12sp" />

    <Button
        android:id="@+id/feekback_activity_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_15dp"
        android:background="@drawable/corner_layout_color_3dp"
        android:padding="@dimen/margin_size_10dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_18sp" />
</LinearLayout>