<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/logintype_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_45dp"
        android:background="@color/layout_title_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/logintype_layout_back"
            android:layout_width="@dimen/margin_size_100dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/margin_size_20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10dp"
                android:src="@drawable/back_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/logintypes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_size_40dp"
            android:layout_marginRight="@dimen/margin_size_40dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logintype_yk_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_3dp"
            android:layout_marginLeft="@dimen/margin_size_8dp"
            android:text="温馨提示：您当前处于游客登录状态"
            android:textSize="@dimen/font_size_12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_50dp"
            android:layout_marginLeft="@dimen/margin_size_24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="微信登录状态"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_wx_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(未使用微信账号登录)"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_wx_logoff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_size_10dp"
                android:background="@drawable/corner_orange_5dp"
                android:gravity="center"
                android:padding="@dimen/margin_size_5dp"
                android:text="注销登录"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:layout_margin="@dimen/margin_size_5dp"
            android:background="@color/gray_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_50dp"
            android:layout_marginLeft="@dimen/margin_size_24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="QQ登录状态"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_qq_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(未使用QQ账号登录)"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_qq_logoff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_size_10dp"
                android:background="@drawable/corner_orange_5dp"
                android:gravity="center"
                android:padding="@dimen/margin_size_5dp"
                android:text="注销登录"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:layout_margin="@dimen/margin_size_5dp"
            android:background="@color/gray_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_50dp"
            android:layout_marginLeft="@dimen/margin_size_24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新浪微博登录状态"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_wb_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_size_8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(未使用新浪微博账号登录)"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_size_12sp" />

            <TextView
                android:id="@+id/logintype_wb_logoff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_size_10dp"
                android:background="@drawable/corner_orange_5dp"
                android:gravity="center"
                android:padding="@dimen/margin_size_5dp"
                android:text="注销登录"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_1dp"
            android:layout_margin="@dimen/margin_size_5dp"
            android:background="@color/gray_color" />
    </LinearLayout>
</LinearLayout>